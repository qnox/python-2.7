FROM ubuntu:20.04

# Install build dependencies
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y \
    curl \
    gcc \
    g++ \
    make \
    musl-tools \
    musl-dev \
    libssl-dev \
    libffi-dev \
    libsqlite3-dev \
    libbz2-dev \
    libreadline-dev \
    zlib1g-dev && \
    rm -rf /var/lib/apt/lists/*

# Copy project files
COPY . /workspace
WORKDIR /workspace

# Set environment variables for musl build
ENV TARGET_PLATFORM=linux \
    TARGET_ARCH=x86_64 \
    TARGET_LIBC=musl \
    TARGET_TRIPLE=x86_64-unknown-linux-musl

# Run the build
CMD ["bash", "-c", "rm -rf Python-2.7.18 build && bash scripts/build-linux.sh"]
